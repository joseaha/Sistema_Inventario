@model IEnumerable<Sistema_Inventario.Models.Producto>

@{
    ViewData["Title"] = "ObtenerProductosPorCategoria";
}

<div class="text-center">
    <h4>Lista de Productos por Categoría <i class="bi bi-list-ul mx-2"></i></h4>
    <hr />
</div>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Código Producto</th>
                <th>Nombre Producto</th>
                <th>Costo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => producto.Id)</td>
                    <td>@Html.DisplayFor(modelItem => producto.CodigoProducto)</td>
                    <td>@Html.DisplayFor(modelItem => producto.NombreProducto)</td>
                    <td>@Html.DisplayFor(modelItem => producto.Costo)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay registros</p>
}
