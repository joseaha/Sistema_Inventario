@model Sistema_Inventario.Models.Categoria

@{
    ViewData["Title"] = "Create";
}



<div class="text-center">
    <h4> Agregar categoria <i class="bi bi-plus-square mx-2"></i></h4>
    <hr />
</div>
<div class="row">
    <div class="col-12">
        <form asp-action="Create" method="post" class="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion"  class="form-control" id="Descripcion" rows="3" required></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <a class="btn btn-outline-primary mx-2" asp-action="Index"><i class="bi bi-arrow-left-square mx-2"></i>Volver</a>
                <button type="submit" class="btn btn-outline-success"><i class="bi bi-plus-square mx-1"></i>Agregar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
