@model Sistema_Inventario.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h4> Cliente : @Model.Nombre <i class="bi bi-box mx-2"></i></h4>
    <hr />
</div>
<div>
    <div class="table-responsive">
        <table class="table table-bordered direccion-span"
               data-provincia="@Model.Provincia"
               data-canton="@Model.Canton"
               data-distrito="@Model.Distrito"
               data-barrio="@Model.Barrio">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <td>@Html.DisplayFor(model => model.Id)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.TipoIdentificacion)</th>
                <td>@Html.DisplayFor(model => model.TipoIdentificacion)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <td>@Html.DisplayFor(model => model.Nombre)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.PrimerApellido)</th>
                <td>@Html.DisplayFor(model => model.PrimerApellido)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.SegundoApellido)</th>
                <td>@Html.DisplayFor(model => model.SegundoApellido)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Sexo)</th>
                <td>@Html.DisplayFor(model => model.Sexo)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Provincia)</th>
                <td class="provincia">@ViewData["Provincia"]</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Canton)</th>
                <td class="canton">@ViewData["Canton"]</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Distrito)</th>
                <td class="distrito">@ViewData["Distrito"]</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Barrio)</th>
                <td class="barrio">@ViewData["Barrio"]</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OtraDireccion)</th>
                <td>@Html.DisplayFor(model => model.OtraDireccion)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CreditoMaximo)</th>
                <td>@Html.DisplayFor(model => model.CreditoMaximo)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.cantidadDiasCredito)</th>
                <td>@Html.DisplayFor(model => model.cantidadDiasCredito)</td>
            </tr>
        </table>
    </div>
</div>

